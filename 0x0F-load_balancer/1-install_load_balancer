#!/usr/bin/env bash
# Config  HAproxy on your lb-01 server.
sudo apt-get update -y
sudo apt-get install -y haproxy

CONFIG="\
frontend main
bind *0:80
mode http
default_backend web-server
backend web-server
balance roundrobin
server 1561-web-01 35.196.86.108:80 check
server 1561-web-02 34.75.109.142:80 check
"

sudo echo "$CONFIG" | sudo tee -a /etc/haproxy/haproxy.cfg
sudo echo "ENABLED=1" | sudo tee -a /etc/default/haproxy
sudo service haproxy start
